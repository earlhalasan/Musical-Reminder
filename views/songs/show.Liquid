{% layout "layout.liquid" %} {% block content %}
<div>
  <article>
    <div class="padding" id="shadow">
      <h3>
        {{ songs.name }}
      </h3>
      <h5 id="descript">
        <strong>Artist:</strong> {{ songs.artist }} <strong>Album:</strong>
        {{ songs.album }}
      </h5>

      <img src="{{ songs.img }}" width="300" id="shadow" /><br />

      <a href="/songs/{{ songs._id }}/edit"
        ><button>Edit {{ songs.name }}</button></a
      >

      <form action="/songs/{{ songs._id }}?_method=DELETE" method="POST">
        <input type="submit" value="Delete" />
      </form>

      <a href="/songs/"><button>Back to Song Library</button></a>
    </div>
  </article>
</div>
{% endblock %}
