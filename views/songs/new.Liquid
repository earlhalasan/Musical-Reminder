{% layout "layout.liquid" %} {% block content %}
<div>
  <legend>
    <h3 class="text-5xl font-semibold pt-2 pl-3 underline">Add a New Song</h3>
  </legend>

  <div class="padding bg-white mt-3 font-semibold" id="shadow">
    <form action="/songs" method="POST">
      <fieldset>
        <label>
          NAME:<br />
          <input
            type="text"
            name="name"
            placeholder="enter song name"
            class="shadow appearance-none border border-black rounded py-2 px-3 text-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
          /> </label
        ><br />
        <label>
          ARTIST:<br />
          <input
            type="text"
            name="artist"
            placeholder="enter artist name"
            class="shadow appearance-none border border-black rounded py-2 px-3 text-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
          /> </label
        ><br />
        <label>
          ALBUM:<br />
          <input
            type="text"
            name="album"
            placeholder="enter album name"
            class="shadow appearance-none border border-black rounded py-2 px-3 text-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
          /> </label
        ><br />
        <label>
          IMG URL:<br />
          <input
            type="text"
            name="img"
            placeholder="enter album cover URL"
            class="shadow appearance-none border border-black rounded py-2 px-3 text-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
          /> </label
        ><br />
        <input
          type="submit"
          value="Add a New Song"
          class="px-2 py-1 m-1 text-base text-black rounded-md bg-orange-200 hover:text-white hover:bg-green-400 transition-colors duration-300 w-44"
        />
      </fieldset>
    </form>
    <a href="/playlists/{{ playlist._id }}">
      <button
        class="px-2 py-1 m-1 text-base text-black rounded-md bg-orange-200 hover:text-white hover:bg-green-400 transition-colors duration-300 w-44"
      >
        Back to Songs
      </button></a
    >
  </div>
</div>

{% endblock %}
