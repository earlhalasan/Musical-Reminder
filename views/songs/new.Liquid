{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/songs" method="POST">
    <fieldset>
      <legend><h3>Add a New Song</h3></legend>
      <label>
        NAME:<br />
        <input type="text" name="name" placeholder="enter song name" />
      </label>
      <label>
        ARTIST:<br />
        <input type="text" name="artist" placeholder="enter artist name" />
      </label>
      <label>
        ALBUM:<br />
        <input type="text" name="album" placeholder="enter album name" />
      </label>
      <label>
        IMG URL:<br />
        <input type="text" name="img" placeholder="enter album cover URL" />
      </label>
    </fieldset>
    <input type="submit" value="Add a New Song" />
  </form>
  <a href="/playlists/{{ playlist._id }}"><button>Back to Menu</button></a>
</div>

{% endblock %}
