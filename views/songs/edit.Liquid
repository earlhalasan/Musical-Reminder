{% layout "layout.liquid" %} {% block content %}
<legend class="text-5xl font-semibold pt-2 pl-3 underline">
  Edit {{ song.name }}
</legend>
<div>
  <div class="padding bg-white mt-3 font-semibold" id="shadow">
    <form action="/songs/{{ song._id }}?_method=PUT" method="POST">
      <fieldset>
        <label>
          NAME:<br />
          <input
            type="text"
            name="name"
            placeholder="enter song name"
            value="{{ song.name }}"
            class="shadow appearance-none border border-black rounded py-2 px-3 text-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
          /> </label
        ><br />
        <label>
          ARTIST:<br />
          <input
            type="text"
            name="artist"
            placeholder="enter artist name"
            value="{{ song.artist }}"
            class="shadow appearance-none border border-black rounded py-2 px-3 text-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
          /> </label
        ><br />
        <label>
          ALBUM:<br />
          <input
            type="text"
            name="album"
            placeholder="enter album name"
            value="{{ song.album }}"
            class="shadow appearance-none border border-black rounded py-2 px-3 text-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
          /> </label
        ><br />
        <label>
          IMG URL:<br />
          <input
            type="text"
            name="img"
            placeholder="enter album cover URL"
            value="{{ song.img }}"
            class="shadow appearance-none border border-black rounded py-2 px-3 text-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
          /> </label
        ><br />
      </fieldset>
      <input
        type="submit"
        value="Confirm {{ song.name }} Edit"
        class="px-2 py-1 m-1 text-base text-black rounded-md bg-orange-200 hover:text-white hover:bg-green-400 transition-colors duration-300 w-48"
      />
    </form>
    <a href="/songs/{{ song._id }}"
      ><button
        class="px-2 py-1 m-1 text-base text-black rounded-md bg-orange-200 hover:text-white hover:bg-green-400 transition-colors duration-300 w-44"
      >
        Back to {{ song.name }}
      </button></a
    >
  </div>
</div>
{% endblock %}
