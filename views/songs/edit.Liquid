{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/songs/{{ song._id }}?_method=PUT" method="POST">
    <fieldset>
      <legend>Edit {{ song.name }}</legend>
      <label>
        NAME:<br />
        <input
          type="text"
          name="name"
          placeholder="enter song name"
          value="{{ song.name }}"
        />
      </label>
      <label>
        ARTIST:<br />
        <input
          type="text"
          name="artist"
          placeholder="enter artist name"
          value="{{ song.artist }}"
        />
      </label>
      <label>
        ALBUM:<br />
        <input
          type="text"
          name="album"
          placeholder="enter album name"
          value="{{ song.album }}"
        />
      </label>
      <label>
        IMG URL:<br />
        <input
          type="text"
          name="img"
          placeholder="enter album cover URL"
          value="{{ song.img }}"
        />
      </label>
    </fieldset>
    <input type="submit" value="Confirm {{ song.name }} Edit" />
  </form>
  <a href="/songs/{{ song._id }}"
    ><button>Back to {{ song.name }}</button></a
  >
</div>
{% endblock %}
