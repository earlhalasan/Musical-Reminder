{% layout "layout.liquid" %} {% block content %}
<div>
  <a href="/playlists/new"><button>New Playlist</button></a>
  <a href="/songs/new"><button>New Song</button></a>
  <a href="/playlists"><button>All Playlists</button></a>
  <a href="/users/logout"><button>Logout</button></a>

  <br /><br />

  {% for song in songs %}
  <article>
    <a href="/songs/{{ song._id }}">
      <div class="row padding" id="shadow">
        <div class="one-third column">
          <img
            src="{{ song.img }}"
            width="140"
            class="u-max-full-width"
            id="shadow"
          />
        </div>

        <div class="two-thirds column">
          <h4>{{ song.name }}</h4>
          <p><strong>Artist:</strong> {{ song.artist }}</p>
          <p><strong>Album:</strong> {{ song.album }}</p>
        </div>

        <br /></div
    ></a>
  </article>

  <br />
  {% endfor %}
</div>

<div>
  <form action="/songs" method="POST">
    <input type="text" name="track" placeholder="track name" />
    <input type="submit" />
  </form>
  <h3>song name: ???</h3>
  <h3>artist name: ???</h3>
  <h3>album name: ???</h3>
  <img src="" />
</div>

{% endblock %}
