{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/playlists" method="POST">
    <fieldset>
      <legend>Create a New Playlist</legend>
      <label>
        NAME:<br />
        <input type="text" name="name" placeholder="enter playlist name" />
      </label>
      <label>
        DESCRIPTION:<br />
        <input
          type="text"
          name="description"
          placeholder="enter playlist description"
        />
      </label>
      <label>
        IMG URL:<br />
        <input type="text" name="img" placeholder="enter product IMG URL" />
      </label>
    </fieldset>
    <input type="submit" value="create new playlist" />
  </form>
</div>
{% endblock %}
