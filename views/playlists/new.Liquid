{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/playlists" method="POST">
    <fieldset>
      <legend><h3>Create a New Playlist</h3></legend>
      <label>
        NAME:<br />
        <input type="text" name="name" placeholder="enter playlist name" />
      </label>
      <label>
        DESCRIPTION:<br />
        <input
          type="text"
          name="description"
          placeholder="enter playlist description"
        />
      </label>
      <label>
        GENRE:<br />
        <input type="text" name="genre" placeholder="enter genre(s)" />
      </label>
      <label>
        IMG URL:<br />
        <input type="text" name="img" placeholder="enter playlist cover URL" />
      </label>
    </fieldset>
    <input type="submit" value="create new playlist" />
  </form>
  <a href="/playlists/"><button>Back to Menu</button></a>
</div>
{% endblock %}
