{% layout "layout.liquid" %} {% block content %}
<div>
  <article>
    <div class="padding" id="shadow">
      <h3>
        {{ playlists.name }}
      </h3>
      <h5 id="descript">{{ playlists.description }}</h5>

      <img src="{{ playlists.img }}" width="300" id="shadow" /><br />

      <!-- <a href="/songs/new"><button>Add Song</button></a><br /> -->

      <form
        id="add-to-playlist"
        action="{{ playlists._id }}/songs"
        method="POST"
      >
        <button type="submit">Add Song From Library</button><br />
        <select name="songId">
          {% for song in songs %}
          <option value="{{ song._id }}">
            {{ song.name }} by {{ song.artist }}
          </option>
          {% endfor %}
        </select>
      </form>

      <a href="/playlists/{{ playlists._id }}/edit"
        ><button>Edit {{ playlists.name }}</button></a
      >
      <form
        action="/playlists/{{ playlists._id }}?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="Delete" />
      </form>

      <table class="u-full-width">
        <thead>
          <tr>
            <th>Song</th>
            <th>Artist</th>
            <th>Album</th>
          </tr>
        </thead>
        <tbody>
          {% for playlist in playlists.songs %}
          <tr>
            <td>{{ playlist.name }}</td>
            <td>{{ playlist.artist }}</td>
            <td>{{ playlist.album }}</td>
            {% endfor %}
          </tr>
        </tbody>
      </table>

      <a href="/playlists/"><button>Back to Menu</button></a>
    </div>
  </article>
</div>
{% endblock %}
