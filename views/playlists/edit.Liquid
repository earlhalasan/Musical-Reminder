{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/playlists/{{ playlist._id }}?_method=PUT" method="POST">
    <fieldset>
      <legend>Edit {{ playlist.name }}</legend>
      <label>
        NAME:<br />
        <input
          type="text"
          name="name"
          placeholder="enter playlist name"
          value="{{ playlist.name }}"
        />
      </label>
      <label>
        DESCRIPTION:<br />
        <input
          type="text"
          name="description"
          placeholder="enter playlist description"
          value="{{ playlist.description }}"
        />
      </label>
      <label>
        IMG URL:<br />
        <input
          type="text"
          name="img"
          placeholder="enter playlist cover URL"
          value="{{ playlist.img }}"
        />
      </label>
    </fieldset>
    <input type="submit" value="Confirm {{ playlist.name }} Edit" />
  </form>
</div>
{% endblock %}
